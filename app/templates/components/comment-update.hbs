{{#if updateCommentForm}}
<h4>Update Comment</h4>
<div>
  <form>
    <div class="form-group">
      <label for="name">Name</label>
      {{input class="form-control" value=comment.name id="name"}}
    </div>
    <div class="form-group">
      <label for="content">Content</label>
      {{input class="form-control" value=comment.content id="content"}}
    </div>
    <button class="btn btn-primary" {{action 'updateComment' comment}}>Update Comment</button>
  </form>
</div>
{{else}}
  <button class="btn btn-primary updateBtn" {{action 'updateCommentForm'}}>Update</button>
{{/if}}
