{{#if updatePostForm}}
<h1>Update blog</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author: </label>
      {{input class="form-control" value=post.author id="author" placeholder=post.author}}
    </div>
    <div class="form-group">
      <label for="title">Title: </label>
      {{input class="form-control" value=post.title id="title" placeholder=post.title}}
    </div>
    <div class="form-group">
      <label for="snippet">Snippet: </label>
      {{input class="form-control" value=post.snippet id="snippet" placeholder=post.snippet}}
    </div>
    <div class="form-group">
      <label for="content">Content: </label>
      {{input class="form-control" value=content id="content" placeholder=post.content}}
    </div>
    <div class="form-group">
      <label for="image">Image (URL):</label>
      {{input class="form-control" value=image id="image" placeholder=post.image}}
    </div>
    <button class="btn btn-warning updateBtn"{{action 'update' post}}> SAVE Update</button>
  </form>
</div>
{{else}}
  <button class="btn btn-primary updateBtn" {{action 'updatePostForm'}}>Update</button>
{{/if}}
