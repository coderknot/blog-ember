<h1>New Blog Post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author: </label>
      {{input class="form-control" value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="title">Title: </label>
      {{input class="form-control" value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="snippet">Snippet: </label>
      {{input class="form-control" value=snippet id="snippet"}}
    </div>
    <div class="form-group">
      <label for="content">Content: </label>
      {{textarea rows="5" class="form-control" value=content id="content"}}
    </div>
    <div class="form-group">
      <label for="image">Image (URL):</label>
      {{input class="form-control" value=image id="image"}}
    </div>
    <button class="btn btn-success"{{action 'savePost'}}>Save</button>
  </form>
</div>
